    private void txtFocus(int n, JTextField j) {
        if (!states[n]) {
            j.setText("");
            j.setForeground(Color.black);
            states[n] = !states[n];
        } else {
            if (j.getText().trim().isEmpty()) {
                j.setText(returnMessage(n));
                j.setForeground(Color.gray);
                states[n] = false;
            }
        }
    }

